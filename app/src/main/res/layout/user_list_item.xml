<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:padding="20dp">
    <ImageView android:id="@+id/image_item" android:layout_width="64dp"
               android:layout_height="64dp"

               android:contentDescription="Image"
               android:cropToPadding="true" android:src="@drawable/dog_emoji"/>
    <LinearLayout android:layout_width="match_parent" android:padding="10dp"
                  android:layout_height="wrap_content"
    android:orientation="vertical">

        <TextView android:id="@+id/name_item_user" android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:hint="Nombre"
                  android:textSize="16sp"
                  android:textStyle="normal"
        />

        <TextView android:id="@+id/number_item" android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:hint="Number"
                  android:textSize="26sp"
                  android:textStyle="bold"

        />
    </LinearLayout>

</LinearLayout>